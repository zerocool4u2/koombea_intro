# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 2 space indentation
[*.rb, *.slim, *.yml]
indent_style = space
indent_size = 2

# Indentation override for all JS and CSS
[app/**.js, app/**.coffee, app/ **.css, app/**.scss]
indent_style = space
indent_size = 2
